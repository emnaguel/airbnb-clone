<%= render 'shared/banner' %>
<div class="container text-center">
  <h1>Boats</h1>
  <%= link_to boats_path do %>
    <i class="fas fa-map-marker"> Show on map</i>
  <% end %>
  <div class="row">
    <% @boats.each do |boat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path boat.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Category</div>
        <div class="card-description">
          <h2><%= boat.name %></h2>
          <p><%= boat.address %></p>
        </div>
        <img class="card-user" src=<%= boat.owner.photo %>>
        <% if policy(boat).show? %>
          <%= link_to "", boat_path(boat), class:'card-link'%>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
