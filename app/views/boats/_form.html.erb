<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3"></div>
      <%= simple_form_for(@boat) do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :stars %>
          <%= f.association :user %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
  </div>
</div>
