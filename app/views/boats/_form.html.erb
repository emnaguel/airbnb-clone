<%= simple_form_for(@boat) do |f| %>
    <%= f.input :name %>
    <%= f.input :category, collection: Boat::CATEGORIES %>
    <%= f.input :model %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :capacity %>
    <%= f.input :price %>
    <%= f.button :submit, class: 'btn btn-primary'%>
<% end %>
