
<%= cl_image_tag @boat.photo, class: "banner-show" %>
<div class="container infos">
  <div class="under-footer">
    <div class="row">
     <div class="boat">

      <div class= "col-sm-offset-3 col-sm-3">
        <p>Owner: <%= @boat.owner.email %></p>
        <p>Name: <%= @boat.name %></p>
        <p>Category: <%= @boat.category %></p>
        <p>Model: <%= @boat.model %></p>
        <p> Address: <%= @boat.address %> </p>
        <p>Description: <%= @boat.description %></p>
        <p>Capacity: <%= @boat.capacity %></p>
        <p>Price: <%= @boat.price %></p>
        <p>Rating: <%= @boat.stars %></p>
      </div>
      <div class= "col-sm-4">
        <% if @marker.present? %>
        <div id="map" class="little-map" style="width: auto; height: 350px;" data-markers="<%= @marker.to_json %>"></div>
        <% end %>
      </div>

    </div>
  </div>


  <% if policy(Booking).new? %>
  <%= link_to new_boat_booking_path(@boat), class: "btn btn-secondary premier" do %>
  <i class="fas fa-euro-sign"> Book this boat</i>
  <% end %>
  <% end %>
  <% if policy(@boat).edit? %>
  <%= link_to edit_boat_path(@boat),class: "btn btn-secondary deuxieme" do %>
  <i class="fas fa-edit"> Edit</i>
  <% end %>
  <% end %>
  <%= link_to root_path, class: "btn btn-secondary troisieme" do %>
  <i class="fas fa-undo-alt">Back</i>
  <% end %>

</div>
